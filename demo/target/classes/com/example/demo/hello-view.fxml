<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="HelloController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox>
            <Label text="Username:"/>
            <TextField fx:id="usernameField" />
            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" />
            <Button text="Login" onAction="#loginButtonClicked"/>
            <Label fx:id="statusLabel"/>
        </HBox>
    </top>
    <center>
        <VBox>
            <Label text="Messages:"/>
            <TextArea fx:id="messagesArea" prefHeight="200"/>
            <Label text="Command:"/>
            <TextField fx:id="commandField" onAction="#commandFieldSubmitted"/>
        </VBox>
    </center>
</BorderPane>
